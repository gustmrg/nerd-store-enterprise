@using NSE.WebApp.MVC.Extensions
@inject IApplicationUser ApplicationUser

<ul class="navbar-nav">
    @if (ApplicationUser.IsAuthenticated())
    {
    <li class="nav-item">
        <a class="nav-link text-dark" title="Manage">Olá, @ApplicationUser.GetUserEmail()</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Identity" asp-action="Logout">Sair</a>
    </li>
    }
    else
    {
    <li class="nav-item" style="padding-right: 30px;">
        <a class="btn btn-success" asp-controller="Identity" asp-action="Register">Crie sua conta</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary" asp-controller="Identity" asp-action="Login">Login</a>
    </li>
    }
</ul>